.row
	.col-lg-12
		%button.btn.btn-primary{data: {toggle: :modal, target: "#new_status"}}
			Tạo nội chủ đề mới

			
%br
.row
	.col-lg-12
		.card
			.card-body
				.table-responsive
					%table#basicTable.table.table-hover.border-table
						%thead
							%tr.text-center
								%th{:style => "width: 80%;"}
									Name
								%th{:style => "width: 20%;"} 
						%tbody
							- @statuses.each do |status|
								%tr
									%td
										= link_to "#{status.name}", new_status_path(status.id)
									%td.text-center
										%a.btn.btn-effect-ripple.btn-sm.btn-success{"data-toggle" => "tooltip", :href => "#", :title => "edit"}
											%i.fa.fa-pencil
										%a.btn.btn-effect-ripple.btn-sm.btn-danger{"data-toggle" => "tooltip", :onclick => "Views.NewStatus.delete(#{status.id})", :title => "delete"}
											%i.fa.fa-times
											

				